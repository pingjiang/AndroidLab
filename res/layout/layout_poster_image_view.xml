<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView android:id="@id/poster_image"
        android:contentDescription="@id/poster_title"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/poster_image_view_width_min"
        android:minHeight="@dimen/poster_image_view_height_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView android:id="@id/poster_title"
        android:text="@string/poster_image_view_title"
        android:gravity="center"
        android:layout_below="@id/poster_image"
        android:layout_alignParentLeft="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
</RelativeLayout>